#!/usr/bin/env php
<?php

declare(strict_types=1);

/**
 * WP Hook Scanner CLI
 *
 * Scans PHP files for WordPress hooks.
 *
 * @package DevUri\WPHookScanner
 */

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',          // When installed as package root
    __DIR__ . '/../../../autoload.php',           // When installed via composer require
];

$autoloaderFound = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require $autoloadPath;
        $autoloaderFound = true;
        break;
    }
}

if (!$autoloaderFound) {
    fwrite(STDERR, "Error: Could not find Composer autoloader.\n");
    fwrite(STDERR, "Please run 'composer install' first.\n");
    exit(1);
}

exit(\WPHookScanner\Cli::run($argv));
